{
  "name": "@turbo-version/version",
  "description": "Automatically versioning for monorepos.",
  "version": "0.8.5",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "author": {
    "name": "jucian0",
    "email": "juciano@outlook.com.br"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jucian0/turbo-version",
    "homepage": "https://turbo-version.vercel.app"
  },
  "keywords": [
    "version",
    "semver",
    "monorepo",
    "turborepo",
    "semantic-release"
  ],
  "license": "MIT",
  "files": [
    "dist/**",
    "turbov.schema.json"
  ],
  "bin": {
    "turbo-version": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --external react",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts --external react",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "devDependencies": {
    "tsup": "^5.10.1",
    "typescript": "^4.5.3",
    "@types/node": "18.14.0",
    "@types/conventional-changelog": "^3.1.1",
    "@types/conventional-recommended-bump": "^6.1.0",
    "@types/semver": "^7.3.13",
    "@types/git-semver-tags": "^4.1.1",
    "@types/conventional-commits-parser": "^3.0.3",
    "@types/figlet": "^1.5.5",
    "ts-jest": "^29.0.5",
    "jest": "^29.5.0",
    "@jest/globals": "29.5.0"
  },
  "dependencies": {
    "@manypkg/get-packages": "^2.1.0",
    "conventional-changelog": "^3.1.25",
    "conventional-recommended-bump": "^6.1.0",
    "git-repository": "^0.1.4",
    "semver": "^7.3.8",
    "commander": "^10.0.0",
    "git-semver-tags": "^4.1.1",
    "chalk": "4.1.2",
    "compare-func": "^2.0.0",
    "conventional-changelog-angular": "^5.0.13",
    "conventional-commits-parser": "3.2.4",
    "figlet": "^1.5.2",
    "@turbo-version/log": "workspace:*",
    "@turbo-version/git": "workspace:*",
    "@turbo-version/fs": "workspace:*",
    "@turbo-version/dependents": "workspace:*",
    "@turbo-version/setup": "workspace:*"
  },
  "publishConfig": {
    "access": "public"
  }
}